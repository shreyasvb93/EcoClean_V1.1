<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shrey.ecoclean_v11">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ChooseBrandActivity"
            android:label="@string/title_activity_choose_brand"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseDealerActivity"
            android:label="@string/title_activity_choose_dealer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseSelectionActivity"
            android:label="@string/title_activity_choose_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SalesConsolePage1Activity"
            android:label="@string/title_activity_sales_console_page1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ServicesConsolePage1Activity"
            android:label="@string/title_activity_services_console_page1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SalesConsolePage2Activity"
            android:label="@string/title_activity_sales_console_page2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EnterNewBrandActivity"
            android:label="@string/title_activity_enter_new_brand"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EnterNewDealerActivity"
            android:label="@string/title_activity_enter_new_dealer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FinalConfirmationActivity"
            android:label="@string/title_activity_final_confirmation"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>